# =============================================================================
# PRIVACY POINT - Configurações de Ambiente
# =============================================================================

# =============================================================================
# OPENAI CONFIGURAÇÃO (OBRIGATÓRIO)
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# CONFIGURAÇÕES DO SISTEMA
# =============================================================================
DEBUG=True
LOG_LEVEL=INFO

# =============================================================================
# SERVIÇOS DE OCR
# =============================================================================
# Caminho para o Tesseract OCR
TESSERACT_PATH=/usr/bin/tesseract

# Habilitar PaddleOCR (recomendado para melhor precisão)
PADDLE_OCR_ENABLED=True

# =============================================================================
# AWS SERVICES (OPCIONAL)
# =============================================================================
# Credenciais AWS para Textract
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1

# Habilitar AWS Textract
AWS_TEXTRACT_ENABLED=False

# =============================================================================
# AZURE SERVICES (OPCIONAL)
# =============================================================================
# Endpoint do Azure Document Intelligence
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_DOCUMENT_INTELLIGENCE_KEY=your_azure_key_here

# Habilitar Azure Document Intelligence
AZURE_ENABLED=False

# =============================================================================
# GOOGLE CLOUD SERVICES (OPCIONAL)
# =============================================================================
# Project ID do Google Cloud
GOOGLE_CLOUD_PROJECT_ID=your_project_id

# Caminho para as credenciais do Google Cloud
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/credentials.json

# Habilitar Google Document AI
GOOGLE_DOCUMENT_AI_ENABLED=False

# =============================================================================
# BANCO DE DADOS POSTGRESQL
# =============================================================================
# Configurações do PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_NAME=privacy_point
DB_USER=postgres
DB_PASSWORD=postgres
DB_ECHO=false

# Para desenvolvimento, usar SQLite (opcional)
USE_SQLITE=false

# URL do MongoDB (opcional, para documentos)
MONGODB_URL=mongodb://localhost:27017/privacy_point

# =============================================================================
# REDIS (OPCIONAL)
# =============================================================================
# URL do Redis para cache e sessões
REDIS_URL=redis://localhost:6379

# =============================================================================
# CONFIGURAÇÕES DA API
# =============================================================================
# Host da API
API_HOST=0.0.0.0

# Porta da API
API_PORT=8000

# Número de workers da API
API_WORKERS=1

# =============================================================================
# SEGURANÇA
# =============================================================================
# Chave secreta para JWT e criptografia
SECRET_KEY=your-super-secret-key-change-in-production

# Algoritmo para JWT
ALGORITHM=HS256

# Tempo de expiração do token de acesso (minutos)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# ARMAZENAMENTO DE ARQUIVOS
# =============================================================================
# Tamanho máximo de arquivo (bytes) - 10MB por padrão
MAX_FILE_SIZE=10485760

# =============================================================================
# MONITORAMENTO
# =============================================================================
# DSN do Sentry para monitoramento de erros
SENTRY_DSN=your_sentry_dsn_here

# Nível de log
LOG_LEVEL=INFO

# =============================================================================
# CONTROLE DE QUALIDADE
# =============================================================================
# Score mínimo de qualidade (0.0 - 1.0)
MIN_QUALITY_SCORE=0.8

# Número máximo de tentativas de revisão
MAX_REVISION_ATTEMPTS=3

# =============================================================================
# CONFIGURAÇÕES ESPECÍFICAS POR AMBIENTE
# =============================================================================

# =============================================================================
# DESENVOLVIMENTO
# =============================================================================
# DEBUG=True
# LOG_LEVEL=DEBUG

# =============================================================================
# PRODUÇÃO
# =============================================================================
# DEBUG=False
# LOG_LEVEL=WARNING
# SECRET_KEY=your-production-secret-key
# DATABASE_URL=postgresql://user:password@localhost/privacy_point
# REDIS_URL=redis://your-redis-server:6379

# =============================================================================
# TESTE
# =============================================================================
# DEBUG=True
# LOG_LEVEL=DEBUG
# DATABASE_URL=sqlite:///./test.db
# REDIS_URL=redis://localhost:6379/1
